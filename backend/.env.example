# ==========================================
# AI-Native Textbook Backend Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==========================================
# Database Configuration
# ==========================================
# Neon Postgres Connection String
# Format: postgresql://user:password@host:port/database?sslmode=require
NEON_DB_URL=postgresql://username:password@your-neon-host.neon.tech/database?sslmode=require 

# ==========================================
# Vector Database Configuration
# ==========================================
# Qdrant Cloud Configuration
QDRANT_URL=https://your-cluster-id.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# ==========================================
# AI/ML API Keys
# ==========================================
# OpenAI API Key for embeddings and RAG responses
# Can use OpenRouter: sk-or-v1-xxxxx or OpenAI: sk-xxxxx
OPENAI_API_KEY=your_openai_or_openrouter_api_key_here

# ==========================================
# Authentication
# ==========================================
# Better-Auth Secret Key (generate with: openssl rand -hex 32)
BETTER_AUTH_SECRET=your_random_secret_key_here_min_32_characters

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Caching
# ==========================================
# Redis URL for personalization caching
# Local: redis://localhost:6379
# Upstash/Railway: redis://:password@host:port
REDIS_URL=redis://localhost:6379

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# ==========================================
# Application Settings
# ==========================================
# Environment: development, staging, production
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Allowed Origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","https://yourusername.github.io"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# ==========================================
# Feature Flags
# ==========================================
# Enable/disable features
ENABLE_PERSONALIZATION=true
ENABLE_TRANSLATION=true
ENABLE_AGENT_SKILLS=true

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# Development Settings
# ==========================================
# Set to true to enable debug mode
DEBUG=false

# Set to true to enable auto-reload
AUTO_RELOAD=true
